<div class="row">
  <div class="large-4 columns"><h2>Listing castles</h2></div>
  <div class="large-4 columns"><%= link_to 'New Castle', new_admin_castle_path, {class: "button tiny radius"} %></small></div>
  <div class="large-4 columns"></div>
</div>
<table>
  <thead>
    <tr>
    <th>ID</th>
    <th>app</th>
    <th>castle name</th>
    <th>cnamejse</th>
    <th colspan="3">actions</th>
    <th>pcount</th>
    </tr>
  </thead>

  <tbody>
    <% @castles.each do |castle| %>
      <tr>
        <td><%= castle.id %></td>
        <td><%= castle.approved %></td>
        <td><%= castle.castle_name_en %></td>
        <td><%= castle.castle_name_ja %></td>
        <td><%= link_to 'Show', admin_castle_path(castle) %></td>
        <td><%= link_to 'Edit', edit_admin_castle_path(castle) %></td>
        <td><%= link_to 'Destroy', admin_castle_path(castle), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= castle.photos.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
