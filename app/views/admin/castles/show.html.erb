									<td>
										<%= link_to 'Show', admin_photo_path(cpicture) %><br /><%= link_to 'Edit', edit_admin_photo_path(cpicture) %><br /><%= link_to 'Destroy', admin_photo_path(cpicture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
								</tr>
  							<% end %>
  						</table>
						<% end %>

