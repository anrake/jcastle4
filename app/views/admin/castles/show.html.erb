  <div class="row">
      
    <div class="large-9 columns">
  
        <h3><%= @castle.castle_name_en %>  <%= @castle.castle_name_ja %>
        <% unless @castle.approved? %> <small>NOT APPROVED</small> <% end %></h3>

    	<div class="row">
    		<div class="large-9 large-centered columns">
        	<% unless @castle.highlighted.nil? %>
   		 			<%= image_tag @castle.highlighted.fullpicture %>
		 			<% end %>
		 		</div>
		 	</div>

		<div class="row">
		     	<%= simple_form_for [:admin, @photo] do |p| %>
		     	<%= p.hidden_field :castle_id, value: @castle.id  %>
	        <div class="large-4 columns">
	        		<%= p.input :fullpicture %>
	  					<%= p.input :description %>
	  					<%=	p.input :shortDesc %>  	
          </div>
 	        <div class="large-4 columns">
	        		<%= p.input :vieworder, :input_html => {:style => "width: 50px;"} %>
	  					<%= p.input :descJse %>
	  					<%=	p.input :shortDescJse %>  	
          </div>
          <div class="large-4 columns">
           		<%= p.input :hide_profile %>
	        		<%= p.input :donatedBy%>
	  				<%= p.input :donatedByLink %>
	  	   			<%= p.button :submit %>
          </div>
						<% end %>
        </div>
        <div class="row">
			  <div class="large-12 columns">
			  	<table>
			  		<tr>
			  			<td><b>alt name: </b><%= @castle.castle_name_alt %></td>
			  			<td><b>founder: </b><%= @castle.founder %></td>
			  			</tr><tr>
			  			<td><b>kamon: </b><%= @castle.kamon %></td>
			  			<td><b>kamon_fam: </b><%= @castle.kamon_fam %></td>
			  			</tr><tr>
			  			<td><b>year: </b><%= @castle.year %></td>
			  			<td><b>reconstructed: </b><%= @castle.year_reconstructed %></td>
			  			</tr><tr>
			  			<td><b>type: </b><%= @castle.castle_type %></td>
			  			<td><b>structure: </b><%= @castle.structure %></td>
			  			</tr><tr>
			  			<td><b>artifacts: </b><%= @castle.artifacts %></td>
			  			<td><b>location: </b><%= @castle.location %></td>
			  			</tr><tr>
			  			<td><b>lat: </b><%= @castle.clatitude %></td>
			  			<td><b>long: </b><%= @castle.clongitude %></td>
			  			</tr><tr>
			  			<td><b>icon: </b><%= @castle.gmapicn %></td>
			  			<td><b>zoom: </b><%= @castle.bestZoom %></td>
			  			</tr><tr>
			  			<td><b>map: </b><%= @castle.bestMap %></td>
			  			<td><b>webname: </b><%= @castle.pro_web_name %></td>
			  			</tr><tr>
			  			<td colspan="2"><b>website: </b><%= @castle.website %></td>
			  			</tr><tr>
			  			<td><b>access: </b><%= @castle.access %></td>
			  			<td><b>visitor info: </b><%= @castle.visitorInfo %></td>
			  			</tr><tr>
			  			<td><b>visited: </b><%= @castle.visited %></td>
			  			<td><b>condition: </b><%= @castle.condition %></td>
			  			</tr><tr>
			  			<td><b>pref: </b><%= @castle.prefecture %></td>
			  			<td><b>histval: </b><%= @castle.historical_value %></td>
			  			</tr><tr>
			  			<td><b>rating: </b><%= @castle.rating %></td>
			  			<td><b>year visited: </b><%= @castle.year_visited %></td>
			  			</tr><tr>
			  			<td><b>top_100: </b><%= @castle.top_100 %></td>
			  			<td><b>has_nt: </b><%= @castle.has_NT %></td>
			  			</tr><tr>
			  			<td><b>has_ic: p</b><%= @castle.has_ICP %></td>
