<%= simple_form_for([:admin,@castle]) do |f| %>
  <%= f.error_notification %>

  	<div class="row">
  		<div class="large-4 columns"><%= f.input :castle_name_en %></div>
			<div class="large-4 columns"><%= f.input :castle_name_ja %></div>
  		<div class="large-4 columns"><%= f.input :castle_name_alt %></div>
  	</div>
  	<div class="row">
  		<div class="large-3 columns"><%= f.input :founder %></div>
  		<div class="large-3 columns"><%= f.input :kamon %></div>
  		<div class="large-2 columns"><%= f.input :kamon_fam %></div>
  		<div class="large-2 columns"><%= f.input :year %></div>
  		<div class="large-2 columns"><%= f.input :year_reconstructed %></div>
		</div>	  			
  	<div class="row">
			<div class="large-3 columns"><%= f.input :structure %></div>
			<div class="large-3 columns"><%= f.input :artifacts %></div>
			<div class="large-2 columns"><%= f.input :visited %></div>
			<div class="large-4 columns"><%= f.input :location %></div>			
		</div>
		<div class="row">
			<div class="large-4 columns"><%= f.input :pro_web_name %></div>
			<div class="large-8 columns"><%= f.input :website %></div>
		</div>
		<div class="row">
			<div class="large-3 columns"><%= f.input :clatitude %></div>
			<div class="large-3 columns"><%= f.input :clongitude %></div>
			<div class="large-1 columns"><%= f.input :gmapicn %></div>
			<div class="large-1 columns"><%= f.input :bestZoom %></div>
			<div class="large-3 columns"><%= f.input :bestMap, collection: ["G_SATELLITE_MAP","G_NORMAL_MAP"] %></div>
		</div>
		<div class="row">
			<div class="large-4 columns"><%= f.input :visitorInfo %></div>
			<div class="large-2 columns"><%= f.input :timeRequired %></div>
			<div class="large-6 columns"><%= f.input :access %></div>
		</div>
		<div class="row">
			<div class="large-2 columns">Check for manual update:<br /><%= f.input :manualUpdate %></div>
			<div class="large-4 columns"><%= f.input :ekiLatLng %></div>
			<div class="large-2 columns">castleelev: <%= @castle.castleElev %><br />ekielev: <%= @castle.ekiElev %><br />elevChange: <%= @castle.elevChange %></div>
			<div class="large-2 columns"><%= f.input :has_ishigaki %><%= f.input :has_buildings %>
</div>
		</div>

		<div class="row">
		<div class="large-12 columns">
			<fieldset><legend>Facets:</legend>	
				<div class="row">
					<div class="large-2 columns">
			  		<%= f.input :condition, collection: ["Original","Reconstructed","Other Buildings","Ruins"] %></div>
			 		<div class="large-2 columns"><%= f.input :castle_type, collection: ["Mountaintop","Flatland","Hilltop"] %></div>
				 	<div class="large-2 columns"><%= f.input :prefecture %></div>
				 	<div class="large-2 columns"><%= f.input :rating, collection: ["1_Star","2_Stars","3_Stars","4_Stars","5_Stars"] %></div>
				 	<div class="large-2 columns"><%= f.input :year_visited %></div>
				 	<div class="large-2 columns"><%= f.input :period, collection: ["Pre_Edo_Period","Edo_Period"] %></div>
				 </div>
				<div class="row">
			 		<div class="large-2 columns"><%= f.input :historical_value, collection: ["National_Historic_Site","Prefectural_Historic_Site","Local_Historic_Site","Special_Historic_Site"] %></div>
			 		<div class="large-2 columns"><%= f.input :top_100, collection: ["not_listed","listed"] %></div>
			 		<div class="large-2 columns"><%= f.input :has_NT, collection: ["no","yes"] %></div>
			 		<div class="large-2 columns"><%= f.input :has_ICP, collection: ["no","yes"] %></div>	<div class="large-2 columns"><%= f.input :unesco, collection: ["no","yes"] %></div>
			 		<div class="large-2 columns"><%= f.input :destination, collection: ["Hokkaido","Aomori","Sendai","Fukushima","Tokyo","Matsumoto","Kanazawa","Nagoya","Kyoto_Osaka","Shikoku","Hiroshima","Kyushu","Okinawa"] %></div>
			  </div>
			</fieldset>
			  <div class="row">
			  	<div class="large-6 columns">
						<%= f.input :notes, :input_html => { 'rows' => 5} %>
					</div>			  	
			  	<div class="large-6 columns">
						<%= f.input :notesJse, :input_html => { 'rows' => 5} %>
					</div>
				</div>			  	
				<div class="row">
			  	<div class="large-10 columns">
						<%= f.input :history, :input_html => { 'rows' => 10} %>
					</div>			  	
			  	<div class="large-2 columns">
						<%= f.input :shortdesc %>
					</div>			  	
				</div>
			  <div class="form-actions">
			    <%= f.button :submit %>
  			</div>
		</div>
		</div>
<% end %>
